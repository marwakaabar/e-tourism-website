{% extends 'base.html.twig' %}

{% block titlepage %}Excursion{% endblock %}

{% block content %}
<div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color: #007682b5;" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Details de l'Excursion Croisière :{{croisiere_excursion.type}}</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:250px" href="{{ path('app_croisiere_excursion_index') }}"><i class="icon-user-plus"></i> Liste des Excursions Croisières</a>
	                	</div>

                           </div><br>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0"  ="grid" aria-describedby="DataTables_Table_0_info">
  
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ croisiere_excursion.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ croisiere_excursion.type }}</td>
            </tr>
           
            <tr>
                                   <th>Images</th>
                                   <td>
                                       {% if app.request.attributes.get('_route') == 'app_croisiere_excursion_show' %}
                                  <div class="col-sm-10">

        {% for image in croisiere_excursion.excursion.images %}
           
    
             
              
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
      

      
        {% endfor %}
  
      </div>
                                
        </td></tr>
        {%endif%}
        </tbody>
    </table>

   


   
{% endblock %}